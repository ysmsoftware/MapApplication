<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.SavedMapDetailsActivity">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_savedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_back_savedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/back_savedData"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/roadName_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Road name"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
           app:layout_constraintTop_toBottomOf="@+id/rl_back"/>
        <TextView
            android:id="@+id/tv_titleData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="road name"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/roadName_data"
            android:textColor="@color/black"
            android:importantForAutofill="no" />
        <TextView
            android:id="@+id/actualRoadLength_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTUAL ROAD LENGTH (in meters)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_titleData"/>
        <TextView
            android:id="@+id/tv_actualRoadLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="actual road length"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/actualRoadLength_data"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/actualRoadWidth_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTUAL ROAD WIDTH (in sq/ft)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_actualRoadLength"/>
        <TextView
            android:id="@+id/tv_actualRoadWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="actual road width"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/actualRoadWidth_data"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/roadLength_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROAD LENGTH AS PER RECORD (in meters)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_actualRoadWidth"/>
        <TextView
            android:id="@+id/tv_roadLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="road length"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/roadLength_data"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/roadWidth_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROAD WIDTH AS PER RECORD (in sq/ft)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_roadLength"/>
        <TextView
            android:id="@+id/tv_roadWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="road width"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/roadWidth_data"
            android:textColor="@color/black"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/pincode_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pincode"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_roadWidth"/>
        <TextView
            android:id="@+id/tv_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pincode "
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/pincode_data"
            android:textColor="@color/black"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/customiseCode_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customise Code"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_pincode"/>
        <TextView
            android:id="@+id/tv_customiseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="customise code"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:theme="@style/Theme.MapApplication"
            app:layout_constraintTop_toBottomOf="@+id/customiseCode_data"
            android:textColor="@color/black"
            android:importantForAutofill="no" />
        <TextView
            android:id="@+id/tv_loc_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lat/lng data"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tv_customiseCode"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/road_data_ll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:nestedScrollingEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/tv_loc_data"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/map_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_solid"
            android:text="See on map"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/road_data_ll"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
